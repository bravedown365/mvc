<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <nav class="navbar navbar-expand-lg bg-dark">
        <a class="navbar-brand me-3 ms-3 mb-3" href="/Home">
            <img class="rounded-3" src="https://i.ytimg.com/vi/K9_VFxzCuQ0/hqdefault.jpg" alt="Logo" width="100" height="50">
        </a>
        <form action="/Home" class="d-flex w-100">
            <div class="input-group d-flex justify-content-center me-3 ms-3 mb-3">
                <input id="search" name="search" type="text" class="form-control" placeholder="Tìm kiếm..." style="max-width: 750px;">
            </div>
            <div class="input-group-append me-3 ms-3 mb-3">
                <button class="btn" type="submit" style="border-color: green;">
                    <i class="fa-solid fa-magnifying-glass" style="color: green;"></i>
                </button>
            </div>
        </form>
    </nav>

    <nav class="navbar navbar-expand-lg bg-dark">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link text-white" href="/Home">
                    <i class="fas fa-home"></i>
                    Trang chủ
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="#">
                    <i class="fas fa-info-circle"></i>
                    Thông tin
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="#">
                    <i class="fas fa-plus-circle"></i>
                    Thêm mới
                </a>
            </li>
        </ul>
    </nav>

    <div class="container mt-4">
        <div class="row">

            <div class="col-md-3">
                <div class="list-group list-group-flush">
                    <label><h4>Thương hiệu</h4></label>
                    <hr style="color: blue; width: 50%;" />
                    <a href="#" class="list-group-item list-group-item-action" style="border: none">Iphone</a>
                    <a href="#" class="list-group-item list-group-item-action" style="border: none">Samsung</a>
                    <a href="#" class="list-group-item list-group-item-action" style="border: none">Vivo</a>
                    <a href="#" class="list-group-item list-group-item-action" style="border: none">Realme</a>
                    <a href="#" class="list-group-item list-group-item-action" style="border: none">Oppo</a>
                    <a href="#" class="list-group-item list-group-item-action" style="border: none">Nokia</a>
                    <a href="#" class="list-group-item list-group-item-action" style="border: none">Xiaomi</a>
                </div>
            </div>

            <div class="col-md-9">
                @RenderBody()
            </div>

        </div>
    </div>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
